{
	"name": "tokra-nodejs-express-app",
	"version": "1.0.0",
	"description": "tokra-nodejs-express-app starter",
	"engines": {
		"node": "^16.0.0"
	},
	"scripts": {
		"dev": "nodemon server/server.js",
		"debug": "node --nolazy --inspect-brk=5858 server.js",
		"start": "node server/server.js",
		"check-coverage": "c8 report --check-coverage --lines 100",
		"lint": "eslint --ignore-path .gitignore .",
		"fix": "eslint --ignore-path .gitignore . --fix",
		"test": "c8 mocha test --recursive --exit"
	},
	"type": "module",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm run test && npm run check-coverage"
		}
	},
	"nyc": {
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"exclude": [
			"test"
		],
		"reporter": [
			"lcov",
			"text-summary"
		]
	},
	"dependencies": {
		"body-parser": "^1.20.0",
		"express": "^4.18.1",
		"helmet": "^5.0.2",
		"ibm-cloud-env": "^0",
		"swagger-ui-express": "^4.4.0"
	},
	"devDependencies": {
		"c8": "^7.11.3",
		"chai": "^4.3.6",
		"eslint": "^7.2.0",
		"eslint-config-strongloop": "^2.1.0",
		"husky": "^8.0.1",
		"mocha": "^10.0.0",
		"nodemon": "^2.0.16",
		"sinon": "^14.0.0",
		"sinon-chai": "^3.7.0",
		"supertest": "^6.2.3",
		"prettier": "^1.19.1",
		"prettier-eslint": "^9.0.2",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^4.3.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^22.7.1",
		"eslint-plugin-prettier": "^3.3.1"
	},
	"license": "Apache-2.0"
}
