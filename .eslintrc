{
	"env": {
		"es2020": true,
		"es6": true,
		"node": true,
		"jest/globals": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
	"plugins": ["prettier", "jest", "chai-friendly"],
	"rules": {
		"prettier/prettier": "error",
		"no-underscore-dangle": ["error", { "allow": ["__get__", "__set__"] }]
	}
}
